@model backEndCapstone.Models.Character

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Character</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RaceId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Race.RaceType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CharacterClassId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.characterClasses.ClassName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Alignment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Alignment)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BackgroundId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.background.description)
        </dd>
        <div id="characterDetails">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.characterDetails)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.characterDetails)
            </dd>
        </div>
        <div id=" CharacterThings" >
            <dt class="col-sm-2">
                Equipment
            </dt>
            @foreach (var Equipch in Model.EquipmentCharacters)
            {
            <dd class="col-sm-10">
               @Equipch.Equipment.EquipmentName:
               @Equipch.Equipment.EquipmentDescription
            </dd>
            }
            <dt class="col-sm-2">
                Feats
            </dt>
            @foreach (var featch in Model.FeatCharacters)
            {
                <dd class="col-sm-10">
                    @featch.Feat.Description:
                    @featch.Feat.featAbility
                </dd>
            }
        </div>
        <div id="AbilityScores2">
            <dt>
                @Html.DisplayNameFor(model => model.Strength)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Strength)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Dexterity)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Dexterity)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Constitution)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Constitution)
            </dd>
        </div>
        <div id="AbilityScores2">
            <dt>
                @Html.DisplayNameFor(model => model.Intelligence)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Intelligence)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Wisdom)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Wisdom)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Charisma)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Charisma)
            </dd>
        </div>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CharacterId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
