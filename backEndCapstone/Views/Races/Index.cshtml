@model IEnumerable<backEndCapstone.Models.Race>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RaceType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RacialAbilities)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Speed)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RaceType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RacialAbilities)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Speed)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RaceId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RaceId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RaceId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
